    class AttributiveCellRenderer extends JLabel  implements TableCellRenderer {
      
        public AttributiveCellRenderer() {
            setOpaque(true);
            setHorizontalAlignment( RIGHT );
        }
      
        public Component getTableCellRendererComponent(JTable table, Object value, boolean isSelected, boolean hasFocus, int row, int column) {
            if(value==null || value.equals("")){
                if(column!=2){
                    if(column==3) setText("0");
                    else setText("0");
                }
                else
                    setText(null);
            }
            else
              setText(String.valueOf(value));
            
            if(row == jTblVtaManual.getSelectedRow() && column == jTblVtaManual.getSelectedColumn())
                this.setBackground(SELECCION);
            else
                this.setBackground(BLANCO);
            
            if(column == 2){
                int a=0, b=0, c=0;
                try{
                    a=Integer.valueOf(jTblVtaManual.getValueAt(row, 0).toString());
                }catch(NumberFormatException nfex){
                    a=0;
                }
                try{
                    b=Integer.valueOf(jTblVtaManual.getValueAt(row, 1).toString());
                }catch(NumberFormatException nfex){
                    b=0;
                }
                c=(b-a)+1;
                setText(""+c);
                xListado.setValueAt(getText(),row,2);
            }
            
          return this;
        }
    }
    
