    private void xAnchoColumnas(){
        TableColumn column = null;
        int anchoContenedor = jScpVtaManual.getWidth();
        for (int i = 0; i < 4; i++) {
            column = jTblVtaManual.getColumnModel().getColumn(i);
            switch(i){
                case 0: column.setPreferredWidth(Math.round(anchoContenedor*(float)0.25)); break;
                case 1: column.setPreferredWidth(Math.round(anchoContenedor*(float)0.25)); break;
                case 2: column.setPreferredWidth(Math.round(anchoContenedor*(float)0.25)); break;
                case 3: column.setPreferredWidth(Math.round(anchoContenedor*(float)0.25)); break;
            }
            column.setResizable(false);
        }
    }
    
    public Object[][] getVtaManual(){
        int i, contador=0, suma=0;
               
        for(i=0; i<jTblVtaManual.getRowCount(); i++){
            suma=suma+Integer.valueOf(jTblVtaManual.getValueAt(i,2).toString());
            if(!jTblVtaManual.getValueAt(i,2).equals("0")) contador++;
        }
        
        if(suma==0) return null;
        
        Object[][] datos = new Object[contador][3];
        for(i=0; i<jTblVtaManual.getRowCount(); i++){
            if(jTblVtaManual.getValueAt(i,0)!=null){
                datos[i][0] = "VTAMNL: "+xListado.getValueAt(i,0).toString()+"-"+xListado.getValueAt(i,1).toString();
                datos[i][1] = xListado.getValueAt(i,2);
                datos[i][2] = xListado.getValueAt(i,3);
            }
        }
        return datos;
    }
    
    private boolean noNegativos(){
        if(jTblVtaManual.getRowCount()>0){
            int i,j;
            for(i=0; i<jTblVtaManual.getRowCount(); i++)
                for(j=0; j<jTblVtaManual.getColumnCount(); j++)
                    if(Double.valueOf(jTblVtaManual.getValueAt(i,j).toString())<0){
                        jTblVtaManual.setColumnSelectionInterval(0,0);
                        jTblVtaManual.setRowSelectionInterval(i,i);
                        this.getToolkit().beep();
                        DialogoAceptar.mostrarDialogo("¡No ingrese valores negativos!","Modifique sus datos correctamente.", Color.RED);
                        jTblVtaManual.requestFocusInWindow();
                        return false;
                    }
            return true;
        }
        else return true;
    }

