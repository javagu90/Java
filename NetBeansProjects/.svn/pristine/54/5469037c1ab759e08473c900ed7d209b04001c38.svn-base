    private void jTblVtaManualKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jTblVtaManualKeyPressed
// TODO add your handling code here:
        if(evt.isAltDown() && evt.getKeyCode()==KeyEvent.VK_F){
            if(jTblVtaManual.getRowCount()==0) return;
            jTblVtaManual.setRowSelectionInterval(0,0);
            jTblVtaManual.setColumnSelectionInterval(0,0);
            jTblVtaManual.requestFocusInWindow();
        }
        else{
            switch(evt.getKeyCode()){
                case KeyEvent.VK_ENTER:
                    if(!noNegativos()) return;
                    this.dispose();
                    break;
                case KeyEvent.VK_F11:
                    if(!noNegativos()) return;
                    agregar();
                    break;
                case KeyEvent.VK_F12:
                    eliminar();
                    break;
            }
        }
    }//GEN-LAST:event_jTblVtaManualKeyPressed

    private void eliminar(){
        if(jTblVtaManual.getRowCount()==0) return;
        xListado.removeRow(jTblVtaManual.getSelectedRow());
        
        if(jTblVtaManual.getRowCount()>0){
            jTblVtaManual.setRowSelectionInterval(0,0);
            jTblVtaManual.setColumnSelectionInterval(0,0);
            jTblVtaManual.requestFocusInWindow();
        }
    }
